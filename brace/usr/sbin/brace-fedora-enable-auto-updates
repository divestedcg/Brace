if [ "$(/usr/bin/id -u)" -ne "0" ]; then echo 'This script needs to be run as root!'; exit 1; fi;

if [ -f /etc/fedora-release ]; then
	echo "Enabling DNF automatic update download & install";
	dnf install dnf5-plugin-automatic rpm-plugin-systemd-inhibit --allowerasing;

	automaticConfig="/etc/dnf/automatic.conf";

	echo "[commands]" > "$automaticConfig"
	echo "apply_updates = yes" >> "$automaticConfig"

	echo "Do you want automatic reboots after installing?";
	select acn in "Always" "Changed" "Never"; do
		case $acn in
			Always )
				echo "reboot = when-changed" >> "$automaticConfig"
				break;;
			Changed )
				echo "reboot = when-needed" >> "$automaticConfig"
				break;;
			Never )
				echo "reboot = never" >> "$automaticConfig"
				break;;
		esac
	done

	echo "#[emitters]" >> "$automaticConfig"
	echo "#emit_via = stdio,command" >> "$automaticConfig"
	echo "#emit_no_updates = yes" >> "$automaticConfig"

	echo "#[command]" >> "$automaticConfig"
	echo "#command_format = 'xmppc --jid account@server.tld --pwd \"password\" -m message chat destination@server.tld \"\$(cat /dev/stdin)\"'" >> "$automaticConfig"
	echo "#stdin_format = \"hostname - {body}\"" >> "$automaticConfig"

	systemctl enable dnf5-automatic.timer --now;
else
	echo "Currently only Fedora is supported";
fi;
